{
	"model": {
		"type": "minecraft:composite",
		"models": [
			{ "type": "minecraft:model", "model": "idos_first_mod:block/bong" },

			{
				"type": "minecraft:select",
				"property": "minecraft:block_state",
				"block_state_property": "water",
				"cases": [
					{ "when": "clean",  "model": { "type": "minecraft:model", "model": "idos_first_mod:block/bong_water_clean"  } },
					{ "when": "stinky", "model": { "type": "minecraft:model", "model": "idos_first_mod:block/bong_water_stinky" } }
				],
				"fallback": { "type": "minecraft:model", "model": "idos_first_mod:block/bong_empty" }
			},

			{
				"type": "minecraft:select",
				"property": "minecraft:block_state",
				"block_state_property": "has_stinky",
				"cases": [
					{ "when": "true", "model": { "type": "minecraft:model", "model": "idos_first_mod:block/bong_stinky_overlay" } }
				],
				"fallback": { "type": "minecraft:model", "model": "idos_first_mod:block/bong_empty" }
			}
		]
	}
}
